$TTL 3600
@   IN SOA {{ infra_core_fqdn }}. admin.{{ infra_domain }}. (
         {{ ansible_date_time.epoch | default(0) }} ; serial
         3600       ; refresh
         1800       ; retry
         604800     ; expire
         86400 )    ; minimum
    IN NS {{ infra_core_fqdn }}.

{{ infra_core_ip.split('.')[-1] }}   IN PTR {{ infra_core_fqdn }}.
{% for record in bind_static_ptr_records %}
{{ record.record }}   IN PTR {{ record.value }}
{% endfor %}
