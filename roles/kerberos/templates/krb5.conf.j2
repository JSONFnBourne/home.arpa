[libdefaults]
 default_realm = {{ kerberos_realm }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true
 default_tkt_enctypes = {{ kerberos_supported_enctypes | join(' ') }}
 default_tgs_enctypes = {{ kerberos_supported_enctypes | join(' ') }}

[realms]
 {{ kerberos_realm }} = {
  kdc = {{ kerberos_kdc_host }}
  admin_server = {{ kerberos_kdc_host }}
 }

[domain_realm]
 .{{ infra_domain }} = {{ kerberos_realm }}
 {{ infra_domain }} = {{ kerberos_realm }}
